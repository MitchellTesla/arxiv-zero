{
    "$schema": "http://json-schema.org/schema#",
    "title": "Thing",
    "type": "object",
    "required": [
        "id",
        "name",
        "created"
    ],
    "properties": {
        "id": {
            "description": "The unique identifier for the thing.",
            "type": "number"
        },
        "created": {
            "description": "The datetime when the thing was created.",
            "type": "string",
            "format": "date-time"
        },
        "name": {
            "description": "Name of the thing.",
            "type": "string"
        }
    }
}
